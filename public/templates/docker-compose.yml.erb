web:
  image: <%= @app.image %>
  container_name: <%= @app.slug %>
  ports:
  <% @app.ports.split(';').each do |port| -%>
  <%= "- #{ port.strip }" %>
  <% end -%>
volumes:
  <% if @app.volumes -%>
  <% @app.volumes.split(';').each do |vol| -%>
  <%= "- #{ vol.strip }" %>
  <% end -%>
  <% end -%>
  - <%= "/srv/docker/#{ @app.slug }/vol:/usr/src/app/public/system" %>
    - <%= "/srv/docker/#{ @app.slug }/log:/usr/src/app/log" %>
  environment:
    RAILS_ENV: production
    VIRTUAL_HOST: <%= @app.virtual_host %>
