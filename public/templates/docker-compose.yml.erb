version: '2'
services:
  web:
    image: <%= @app.image %>
    container_name: <%= @app.slug %>
    ports:
    <% @app.ports.split(';').each do |port| -%>
    <%= "- #{ port.strip }" %>
    <% end -%>
  volumes:
  <% if [@app.volumes, "#{ volumes_app_dir(@app.slug) }:/usr/src/ap/public/system", "#{ log_app_dir(@app.slug) }:/usr/src/app/log"].flatten -%>
    <% @app.volumes.split(';').each do |vol| -%>
    <%= "- #{ vol.strip }" %>
    <% end -%>
  <% end -%>
  environment:
      RAILS_ENV: production
      VIRTUAL_HOST: <%= @app.virtual_host %>
      SECRET_KEY_BASE: 53f5f599e08171a3c8959d7b7caecf1fec5b5e14
