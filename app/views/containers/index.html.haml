%h1= glyph_and_text HarbourCrane::Application::Glyph::CONTAINER, "Containers listing"
%p List of containers running in your server
%br
%br
%table.table
  %tr
    %th Container ID
    %th Image
    %th Command
    %th Created at
    %th Status
    %th Ports
    %th Names
    %th Actions
  - @containers.each do |container|
    %tr
      %td= container.info["id"][0..12]
      %td= display_image_name container.info["Image"]
      %td= container.info["Command"]
      %td= container.info["Created"]
      %td= container.info["Status"]
      %td= display_ports_info container.info["Ports"]
      %td= container.info["Names"].join(', ')
      %td
        = link_to glyph('pencil'), edit_container_path(container.info["id"])
        = link_to glyph('eye'), container_path(container.info["id"])
        = link_to glyph('trash'), container_path(container.info["id"])
