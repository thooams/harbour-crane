%h1= glyph_and_text HarbourCrane::Application::Glyph::CONTAINER, "Containers listing"
%p List of containers running in your server
%br
%br
%table.table
  %tr
    %th Container ID
    %th Image
    %th Command
    %th Created at
    %th Status
    %th Ports
    %th Names
    %th Actions
  - @containers.each do |container|
    %tr
      %td= container.id
      %td= container.image_name
      %td= container.command
      %td= container.created_at
      %td= container.status
      %td= container.ports
      %td= container.names
      %td
        - unless container.infos.proxy? || container.infos.administration?
          = link_to glyph('pencil'), edit_container_path(container.infos.id)
          = link_to glyph('eye'), container_path(container.infos.id)
          = link_to glyph('trash'), container_path(container.infos.id)
