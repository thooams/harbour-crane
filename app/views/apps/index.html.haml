%h1= glyph_and_text App::GLYPH, "Apps listing"
%p List of apps in your server
%br
%br
= button_link 'New App', state: :primary, glyph: 'plus-circle', url: new_app_path
%br
%br
%table.table
  %tr
    %th Name
    %th Description
    %th State
    %th Created At
    %th Actions
  - @apps.each do |app|
    %tr
      %td= app.name
      %td= app.description
      %td= app.state
      %td= app.created_at
      %td
        = link_to glyph('refresh'), restart_app_path(app.slug)
        = link_to glyph('pencil'), edit_app_path(app.slug)
        = link_to glyph('eye'), app_path(app.slug)
        = link_to glyph('trash'), containers_path
